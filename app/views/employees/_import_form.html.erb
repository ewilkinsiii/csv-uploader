<%= form_with url: import_employees_path, method: :post do |f| %>
    <div class="container">
    <div class="d-flex justify-content-end" >
        <%= f.file_field :file, accept: ".csv" %>
        <div class="btn-group"> 
            <%= f.submit "Upload Employees", class: "btn btn-primary" %>
            <%= link_to "Clear Employees", clear_employees_path, class: "btn btn-danger",
            data: {turbo_method: :delete,
            turbo_confirm: "Are you sure you want to delete all employees?"}
            %>
        </div>
    </div>
<%end%>
